@model IEnumerable<WorkLogDto>
@{
    ViewData["Title"] = "İş Kayıtları";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-tasks"></i> İş Kayıtları
                        @if (ViewBag.FilterType != null)
                        {
                            <span class="badge badge-info">@ViewBag.FilterType: @ViewBag.FilterName</span>
                        }
                    </h3>
                    <div class="card-tools">
                        <a asp-action="Create" class="btn btn-primary btn-sm">
                            <i class="fas fa-plus"></i> Yeni İş Kaydı
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-striped" id="workLogsTable">
                        <thead>
                            <tr>
                                <th>Tarih</th>
                                <th>Başlık</th>
                                <th>Proje</th>
                                <th>Çalışan</th>
                                <th>Süre (Saat)</th>
                                <th>Detaylar</th>
                                <th>Ekler</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var workLog in Model)
                            {
                                <tr>
                                    <td>@workLog.WorkDate.ToString("dd.MM.yyyy")</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@workLog.Id">
                                            @workLog.Title
                                        </a>
                                    </td>
                                    <td>@workLog.ProjectName</td>
                                    <td>@workLog.EmployeeName</td>
                                    <td>@workLog.HoursSpent.ToString("F1")</td>
                                    <td>
                                        @if (workLog.DetailCount > 0)
                                        {
                                            <span class="badge badge-info">@workLog.DetailCount adım</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (workLog.AttachmentCount > 0)
                                        {
                                            <span class="badge badge-success">@workLog.AttachmentCount dosya</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@workLog.Id"
                                           class="btn btn-info btn-sm" title="Detaylar">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@workLog.Id"
                                           class="btn btn-warning btn-sm" title="Düzenle">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#workLogsTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Turkish.json"
                },
                "order": [[0, "desc"]],
                "pageLength": 25
            });
        });
    </script>
}
