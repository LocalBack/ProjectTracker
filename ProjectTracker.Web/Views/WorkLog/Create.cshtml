@model CreateWorkLogDto
@{
    ViewData["Title"] = "Yeni İş Kaydı";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-plus-circle"></i> Yeni İş Kaydı Oluştur
                    </h3>
                </div>
                <form asp-action="Create" method="post">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="form-group">
                            <label asp-for="ProjectId" class="control-label">Proje</label>
                            <select asp-for="ProjectId" class="form-control" asp-items="ViewBag.Projects">
                                <option value="">-- Proje Seçiniz --</option>
                            </select>
                            <span asp-validation-for="ProjectId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Title" class="control-label">Başlık</label>
                            <input asp-for="Title" class="form-control" placeholder="Yapılan işin kısa başlığı" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Description" class="control-label">Açıklama</label>
                            <textarea asp-for="Description" class="form-control" rows="5"
                                      placeholder="Yapılan işin detaylı açıklaması"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="WorkDate" class="control-label">Çalışma Tarihi</label>
                                    <input asp-for="WorkDate" type="date" class="form-control" />
                                    <span asp-validation-for="WorkDate" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="HoursSpent" class="control-label">Harcanan Süre (Saat)</label>
                                    <input asp-for="HoursSpent" type="number" step="0.5" class="form-control"
                                           placeholder="0.0" />
                                    <span asp-validation-for="HoursSpent" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Kaydet
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Geri
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}