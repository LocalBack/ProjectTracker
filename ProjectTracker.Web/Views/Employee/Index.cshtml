@model PaginatedList<ProjectTracker.Service.DTOs.EmployeeDto>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer L
@{
    ViewData["Title"] = L["Employees"];
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div class="d-flex align-items-center">
        <i class="fas fa-users fa-2x me-3"></i>
        <h1 class="mb-0">@ViewData["Title"]</h1>
    </div>
    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
    {
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus me-2"></i>@L["NewEmployee"]
        </a>
    }
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        <form asp-action="Index" method="get" class="mb-3">
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="input-group">
                        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]"
                               class="form-control" placeholder="@L["SearchPlaceholder"]" />
                        <button type="submit" class="btn btn-primary">@L["Search"]</button>
                        @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
                        {
                            <a asp-action="Index" class="btn btn-secondary">@L["Clear"]</a>
                        }
                    </div>
                </div>
                <div class="col-md-3">
                    <select name="pageSize" class="form-select" onchange="this.form.submit()">
                        <option value="10" selected="@(ViewData["CurrentPageSize"]?.ToString() == "10")">@L["ShowRecords", 10]</option>
                        <option value="20" selected="@(ViewData["CurrentPageSize"]?.ToString() == "20")">@L["ShowRecords", 20]</option>
                        <option value="50" selected="@(ViewData["CurrentPageSize"]?.ToString() == "50")">@L["ShowRecords", 50]</option>
                        <option value="100" selected="@(ViewData["CurrentPageSize"]?.ToString() == "100")">@L["ShowRecords", 100]</option>
                    </select>
                </div>
                <div class="col-md-3 text-end">
                    <p class="mb-0 text-muted">
                        @L["TotalEmployeesCount", ViewData["TotalRecords"]]
                    </p>
                </div>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]"
                               asp-route-currentFilter="@ViewData["CurrentFilter"]"
                               asp-route-pageSize="@ViewData["CurrentPageSize"]">
                                @L["FullName"] <i class="fas fa-sort"></i>
                            </a>
                        </th>
                        <th>@L["Email"]</th>
                        <th>
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["TitleSortParm"]"
                               asp-route-currentFilter="@ViewData["CurrentFilter"]"
                               asp-route-pageSize="@ViewData["CurrentPageSize"]">
                                @L["Title"] <i class="fas fa-sort"></i>
                            </a>
                        </th>
                        <th>@L["Department"]</th>
                        <th>@L["Phone"]</th>
                        <th>
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["HireDateSortParm"]"
                               asp-route-currentFilter="@ViewData["CurrentFilter"]"
                               asp-route-pageSize="@ViewData["CurrentPageSize"]">
                                @L["HireDate"] <i class="fas fa-sort"></i>
                            </a>
                        </th>
                        <th>@L["Actions"]</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none">
                                    @item.FirstName @item.LastName
                                </a>
                            </td>
                            <td>
                                <a href="mailto:@item.Email" class="text-decoration-none">
                                    @item.Email
                                </a>
                            </td>
                            <td>@(!string.IsNullOrEmpty(item.Title) ? item.Title : "-")</td>
                            <td class="text-muted">-</td>
                            <td class="text-muted">-</td>
                            <td>@item.HireDate.ToString("dd.MM.yyyy")</td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Details" asp-route-id="@item.Id"
                                       class="btn btn-info" title="@L["Details"]">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-warning" title="@L["Edit"]">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    }
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           class="btn btn-danger" title="@L["Delete"]">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Employee pagination">
                <ul class="pagination justify-content-center">
                    @if (Model.HasPreviousPage)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Index"
                               asp-route-sortOrder="@ViewData["CurrentSort"]"
                               asp-route-pageNumber="@(Model.PageIndex - 1)"
                               asp-route-currentFilter="@ViewData["CurrentFilter"]"
                               asp-route-pageSize="@ViewData["CurrentPageSize"]">
                                <i class="fas fa-chevron-left"></i> @L["Previous"]
                            </a>
                        </li>
                    }

                    @for (int i = Math.Max(1, Model.PageIndex - 2); i <= Math.Min(Model.TotalPages, Model.PageIndex + 2); i++)
                    {
                        <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                            <a class="page-link" asp-action="Index"
                               asp-route-sortOrder="@ViewData["CurrentSort"]"
                               asp-route-pageNumber="@i"
                               asp-route-currentFilter="@ViewData["CurrentFilter"]"
                               asp-route-pageSize="@ViewData["CurrentPageSize"]">
                                @i
                            </a>
                        </li>
                    }

                    @if (Model.HasNextPage)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Index"
                               asp-route-sortOrder="@ViewData["CurrentSort"]"
                               asp-route-pageNumber="@(Model.PageIndex + 1)"
                               asp-route-currentFilter="@ViewData["CurrentFilter"]"
                               asp-route-pageSize="@ViewData["CurrentPageSize"]">
                                @L["Next"] <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>
                    }
                </ul>
            </nav>

            <div class="text-center text-muted">
                @L["PageInfo", Model.PageIndex, Model.TotalPages]
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}

