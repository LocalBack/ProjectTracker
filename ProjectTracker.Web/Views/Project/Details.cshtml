@model ProjectTracker.Service.DTOs.ProjectDto
@{
    ViewData["Title"] = "Proje Detayları";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h3><i class="fas fa-info-circle"></i> @Model.Name - Detaylar</h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Proje Adı</dt>
                        <dd class="col-sm-9">@Model.Name</dd>

                        <dt class="col-sm-3">Açıklama</dt>
                        <dd class="col-sm-9">@Model.Description</dd>

                        <dt class="col-sm-3">Başlangıç Tarihi</dt>
                        <dd class="col-sm-9">@Model.StartDate.ToString("dd.MM.yyyy")</dd>

                        <dt class="col-sm-3">Bitiş Tarihi</dt>
                        <dd class="col-sm-9">@(Model.EndDate?.ToString("dd.MM.yyyy") ?? "Belirlenmedi")</dd>

                        <dt class="col-sm-3">Bütçe</dt>
                        <dd class="col-sm-9">@Model.Budget.ToString("C")</dd>

                        <dt class="col-sm-3">Gerçekleşen Maliyet</dt>
                        <dd class="col-sm-9">@(Model.ActualCost?.ToString("C") ?? "Henüz yok")</dd>
                    </dl>

                    <div class="mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Düzenle
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Listeye Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>