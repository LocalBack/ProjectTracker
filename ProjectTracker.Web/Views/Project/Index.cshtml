@model IEnumerable<ProjectTracker.Service.DTOs.ProjectDto>
@{
    ViewData["Title"] = "Projeler";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h2><i class="fas fa-project-diagram"></i> Projeler</h2>
        </div>
        <div class="col text-end">
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus"></i> Yeni Proje
            </a>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Proje Adı</th>
                            <th>Açıklama</th>
                            <th>Başlangıç</th>
                            <th>Bitiş</th>
                            <th>Bütçe</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var project in Model)
                        {
                            <tr>
                                <td>@project.Name</td>
                                <td>@project.Description</td>
                                <td>@project.StartDate.ToString("dd.MM.yyyy")</td>
                                <td>@(project.EndDate?.ToString("dd.MM.yyyy") ?? "-")</td>
                                <td>@project.Budget.ToString("C")</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@project.Id" class="btn btn-sm btn-info">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@project.Id" class="btn btn-sm btn-warning">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@project.Id" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>