@model ProjectTracker.Web.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = "_Layout";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-lg">
            <div class="card-header bg-primary text-white text-center py-4">
                <h3 class="mb-0"><i class="fas fa-user-plus"></i> @ViewData["Title"]</h3>
            </div>
            <div class="card-body p-4">
                <form asp-action="Register" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="FirstName" class="form-control" placeholder="Ad" />
                                <label asp-for="FirstName">Ad</label>
                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="LastName" class="form-control" placeholder="Soyad" />
                                <label asp-for="LastName">Soyad</label>
                                <span asp-validation-for="LastName" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" placeholder="E-posta" />
                        <label asp-for="Email">E-posta</label>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Password" class="form-control" placeholder="Şifre" />
                        <label asp-for="Password">Şifre</label>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Şifre Tekrar" />
                        <label asp-for="ConfirmPassword">Şifre Tekrar</label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <div class="form-check mb-4">
                        <input asp-for="KvkkAccepted" class="form-check-input" />
                        <label asp-for="KvkkAccepted" class="form-check-label">
                            <a href="/kvkk" target="_blank">KVKK onam formunu</a> okudum ve kabul ediyorum
                        </label>
                        <span asp-validation-for="KvkkAccepted" class="text-danger small"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-user-plus"></i> Kayıt Ol
                        </button>
                    </div>
                </form>

                <hr class="my-4" />

                <div class="text-center">
                    <p class="mb-0">Zaten hesabınız var mı?</p>
                    <a asp-action="Login" class="btn btn-link">Giriş Yap</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}