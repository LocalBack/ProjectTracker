@model LoginViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer L
@{
    ViewData["Title"] = L["Login"];
    Layout = "_Layout";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-4">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h3 class="card-title text-center mb-0">
                    <i class="fas fa-sign-in-alt"></i> @L["Login"]
                </h3>
            </div>
            <div class="card-body">
                <form asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Email"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            <input asp-for="Email" class="form-control" placeholder="email@example.com" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Password"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            <input asp-for="Password" class="form-control" placeholder="******" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label"></label>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-sign-in-alt"></i> @L["Login"]
                    </button>
                </form>
            </div>
            <div class="card-footer text-center">
                <small class="text-muted">
                    @L["NoAccount"] <a asp-action="Register">@L["Register"]</a>
                </small>
            </div>
        </div>

        <div class="alert alert-info mt-3">
            <h6 class="alert-heading">@L["TestUser"]</h6>
            <small>
                <strong>@L["EmailLabel"]:</strong> admin@projecttracker.com<br>
                <strong>@L["PasswordLabel"]:</strong> Admin123!
            </small>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}