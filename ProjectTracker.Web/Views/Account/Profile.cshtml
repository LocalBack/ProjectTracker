@model ProjectTracker.Web.ViewModels.ProfileViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer L
@{
    ViewData["Title"] = L["MyProfile"];
    Layout = "_Layout";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-lg">
            <div class="card-header bg-primary text-white text-center py-4">
                <h3 class="mb-0"><i class="fas fa-user"></i> @ViewData["Title"]</h3>
            </div>
            <div class="card-body p-4">
                <dl class="row">
                    <dt class="col-sm-4">@L["FirstName"]</dt>
                    <dd class="col-sm-8">@Model.FirstName</dd>

                    <dt class="col-sm-4">@L["LastName"]</dt>
                    <dd class="col-sm-8">@Model.LastName</dd>

                    <dt class="col-sm-4">@L["Email"]</dt>
                    <dd class="col-sm-8">
                        <a href="mailto:@Model.Email">@Model.Email</a>
                    </dd>

                    <dt class="col-sm-4">@L["RegistrationDate"]</dt>
                    <dd class="col-sm-8">@Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")</dd>

                    <dt class="col-sm-4">@L["LastLogin"]</dt>
                    <dd class="col-sm-8">@(Model.LastLoginDate?.ToString("dd.MM.yyyy HH:mm") ?? "-")</dd>
                </dl>
            </div>
            <div class="card-footer text-center">
                <a asp-action="ChangePassword" class="btn btn-outline-primary">
                    <i class="fas fa-key"></i> @L["ChangePassword"]
                </a>
            </div>
        </div>
    </div>
</div> 