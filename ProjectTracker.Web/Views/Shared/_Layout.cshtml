<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjectTracker</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <i class="fas fa-project-diagram"></i> ProjectTracker
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home"></i> Ana Sayfa
                        </a>
                    </li>

                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <!-- User Role Menu Items -->
                        @if (User.IsInRole("User") || User.IsInRole("Employee") || User.IsInRole("Manager") || User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="UserDashboard" asp-action="Index">
                                    <i class="fas fa-tachometer-alt"></i> Kontrol Paneli
                                </a>
                            </li>
                        }

                        <!-- Employee Role Menu Items -->
                        @if (User.IsInRole("Employee") || User.IsInRole("Manager") || User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Employee" asp-action="MyProfile">
                                    <i class="fas fa-user-tie"></i> Profilim
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="WorkLog" asp-action="MyWorkLogs">
                                    <i class="fas fa-clock"></i> İş Kayıtlarım
                                </a>
                            </li>
                        }

                        <!-- Manager Role Menu Items -->
                        @if (User.IsInRole("Manager") || User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="managerDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-briefcase"></i> Yönetim
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Project" asp-action="Index">
                                            <i class="fas fa-project-diagram"></i> Proje Yönetimi
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Employee" asp-action="Index">
                                            <i class="fas fa-users"></i> Çalışan Yönetimi
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="WorkLog" asp-action="Index">
                                            <i class="fas fa-tasks"></i> Tüm İş Kayıtları
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Report" asp-action="Index">
                                            <i class="fas fa-chart-bar"></i> Raporlar
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }

                        <!-- Admin Only Menu Items -->
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-cog"></i> Sistem
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" href="/Admin" target="_blank">
                                            <i class="fas fa-user-shield"></i> Admin Paneli
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="System" asp-action="Settings">
                                            <i class="fas fa-sliders-h"></i> Sistem Ayarları
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="System" asp-action="Logs">
                                            <i class="fas fa-file-alt"></i> Sistem Logları
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }

                        <!-- ReadOnly Users - Limited Menu -->
                        @if (User.IsInRole("ReadOnly") && !User.IsInRole("Employee") && !User.IsInRole("Manager") && !User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Project" asp-action="Index">
                                    <i class="fas fa-eye"></i> Projeleri Görüntüle
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Report" asp-action="PublicReports">
                                    <i class="fas fa-chart-line"></i> Raporlar
                                </a>
                            </li>
                        }
                    }
                    else
                    {
                        <!-- Public Menu Items (Not Logged In) -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="About">
                                <i class="fas fa-info-circle"></i> Hakkımızda
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Contact">
                                <i class="fas fa-envelope"></i> İletişim
                            </a>
                        </li>
                    }
                </ul>

                <!-- GİRİŞ/ÇIKIŞ BUTONLARI -->
                <ul class="navbar-nav ms-auto">
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <!-- Role Badge -->
                        <li class="nav-item d-flex align-items-center me-2">
                            @if (User.IsInRole("Admin"))
                            {
                                <span class="badge bg-danger">Admin</span>
                            }
                            else if (User.IsInRole("Manager"))
                            {
                                <span class="badge bg-warning">Yönetici</span>
                            }
                            else if (User.IsInRole("Employee"))
                            {
                                <span class="badge bg-info">Çalışan</span>
                            }
                            else if (User.IsInRole("User"))
                            {
                                <span class="badge bg-success">Kullanıcı</span>
                            }
                            else if (User.IsInRole("ReadOnly"))
                            {
                                <span class="badge bg-secondary">Misafir</span>
                            }
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user-circle"></i> @User.Identity.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                        <i class="fas fa-user"></i> Profilim
                                    </a>
                                </li>
                                @if (User.IsInRole("Employee") || User.IsInRole("Manager") || User.IsInRole("Admin"))
                                {
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="MySettings">
                                            <i class="fas fa-cog"></i> Ayarlarım
                                        </a>
                                    </li>
                                }
                                <li>
                                    <a class="dropdown-item" asp-controller="Account" asp-action="ChangePassword">
                                        <i class="fas fa-key"></i> Şifre Değiştir
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                        <button type="submit" class="dropdown-item">
                                            <i class="fas fa-sign-out-alt"></i> Çıkış Yap
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">
                                <i class="fas fa-sign-in-alt"></i> Giriş Yap
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Register">
                                <i class="fas fa-user-plus"></i> Kayıt Ol
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container-fluid mt-3">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i> @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Warning"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle"></i> @TempData["Warning"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Info"] != null)
        {
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                <i class="fas fa-info-circle"></i> @TempData["Info"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <main role="main" class="pb-3">
            @RenderBody()  <!-- ⚠️ BU SATIR ÇOK ÖNEMLİ! -->
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer mt-auto py-3 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <span class="text-muted">&copy; 2024 - ProjectTracker</span>
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <span class="text-muted ms-3">
                            <i class="fas fa-user"></i> Hoş geldiniz, <strong>@User.Identity.Name</strong>
                        </span>
                    }
                </div>
                <div class="col-md-6 text-end">
                    <a asp-controller="Home" asp-action="Privacy" class="text-muted text-decoration-none">
                        <i class="fas fa-shield-alt"></i> Gizlilik
                    </a>
                    <span class="text-muted mx-2">|</span>
                    <a asp-controller="Home" asp-action="Terms" class="text-muted text-decoration-none">
                        <i class="fas fa-file-contract"></i> Kullanım Şartları
                    </a>
                    @if (User.IsInRole("Admin"))
                    {
                        <span class="text-muted mx-2">|</span>
                        <a href="/Admin" class="text-muted text-decoration-none">
                            <i class="fas fa-cogs"></i> Admin
                        </a>
                    }
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Additional Scripts for Better UX -->
    <script>
        $(document).ready(function () {
            // Auto-hide alerts after 5 seconds
            setTimeout(function () {
                $('.alert').fadeOut('slow');
            }, 5000);

            // Add active class to current nav item
            var currentPath = window.location.pathname;
            $('.navbar-nav a[href="' + currentPath + '"]').addClass('active');

            // Handle dropdown active state
            $('.navbar-nav .dropdown-menu a[href="' + currentPath + '"]').closest('.dropdown').find('.dropdown-toggle').addClass('active');

            // Add tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)  <!-- ⚠️ BU DA ÖNEMLİ! -->
</body>
</html>