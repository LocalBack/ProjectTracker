@page
@model ProjectTracker.Admin.Pages.IndexModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<h1 class="display-4">Welcome to the ProjectTracker Admin Panel!</h1>
<p>This is your central hub for managing users, projects, and tasks within the system.</p>

<div class="row mt-4">
    <div class="col-md-4">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Dashboard</h5>
                <p class="card-text">See Project Reports and Charts.</p>
                <a asp-page="/Dashboard/Index" class="btn btn-primary">Go to Dashboard</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">User Management</h5>
                <p class="card-text">Manage user accounts and roles.</p>
                <a asp-page="/Users/Index" class="btn btn-primary">Go to Users</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Project Management</h5>
                <p class="card-text">Create, edit, and delete projects.</p>
                <a asp-page="/Projects/Index" class="btn btn-primary">Go to Projects</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Task Management</h5>
                <p class="card-text">Manage tasks within projects.</p>
                <a asp-page="/Tasks/Index" class="btn btn-primary">Go to Tasks</a>
            </div>
        </div>
    </div>
</div>