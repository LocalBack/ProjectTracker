@page
@model ProjectTracker.Admin.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Users";
}
<h1>Users</h1>
<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Active</th>
            <th>KVKK</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var u in Model.Users)
    {
        <tr>
            <td>@u.Email</td>
            <td>
                <form method="post" asp-page-handler="Toggle" asp-route-id="@u.Id">
                    <button class="btn btn-sm @(u.IsActive ? "btn-success" : "btn-danger")" type="submit">@u.IsActive</button>
                </form>
            </td>
            <td title="@u.KvkkTimestamp">@u.KVKK</td>
        </tr>
    }
    </tbody>
</table>
