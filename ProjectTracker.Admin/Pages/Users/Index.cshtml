@page
@model ProjectTracker.Admin.Pages.Users.IndexModel
@{
    ViewData["Title"] = "User Management";
}

<h1 class="display-4">User Management</h1>

<p>
    <a asp-page="/Users/Create" class="btn btn-primary">Create New User</a> @* Bu link şimdilik pasif, ileride ekleyeceğiz *@
</p>

@if (Model.Users == null || !Model.Users.Any())
{
    <div class="alert alert-info" role="alert">
        No users found.
    </div>
}
else
{
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Is Admin</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        @* Admin rol durumu için basit bir gösterge. IsUserInRole yardımcı metodu kullanıldı. *@
                        @if (await Model.IsUserInRole(user, "Admin"))
                        {
                            <span class="badge bg-success">Yes</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">No</span>
                        }
                    </td>
                    <td>
                        <a asp-page="/Users/ManageRoles" asp-route-id="@user.Id" class="btn btn-sm btn-info">Manage Roles</a>
                        <a asp-page="/Users/Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Edit</a> @* Şimdilik pasif *@
                        <a asp-page="/Users/Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Delete</a> @* Şimdilik pasif *@
                    </td>
                </tr>
            }
        </tbody>
    </table>
}