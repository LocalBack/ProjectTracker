@page
@model ProjectTracker.Admin.Pages.Projects.DetailsModel
@{
    ViewData["Title"] = "Project Details";
}

<h1>Project Details</h1>

<div>
    <h4>Project</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Project.Name</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Project.Description</dd>

        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.Project.StartDate.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@Model.Project.EndDate?.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Budget</dt>
        <dd class="col-sm-10">@Model.Project.Budget</dd>

        <dt class="col-sm-2">Actual Cost</dt>
        <dd class="col-sm-10">@Model.Project.ActualCost</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Project.Status</dd>
    </dl>

    <h5>Documents</h5>
    @if (Model.Project.Documents != null && Model.Project.Documents.Any())
    {
        <ul class="list-group mb-3">
            @foreach (var doc in Model.Project.Documents)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span>@doc.FileName (@(doc.FileSize / 1024 / 1024) MB)</span>
                    <a href="@doc.FilePath" class="btn btn-sm btn-primary" download>Download</a>
                </li>
            }
        </ul>
    }
    else
    {
        <p class="text-muted">No documents uploaded.</p>
    }
</div>
<div class="mt-3">
    <a asp-page="Edit" asp-route-id="@Model.Project.Id" class="btn btn-primary">Edit</a>
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
</div>
